<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stuartsullivan.underguide" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".UnderGuide"
            android:label="@string/title_activity_under_guide" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CharacterView"
            android:label="@string/title_activity_character_view">
        </activity>
        <activity
            android:name=".CharacterSelect"
            android:label="@string/title_activity_character_select">
        </activity>
        <activity
            android:name=".PatchNotes"
            android:label="@string/title_activity_patch_notes">
        </activity>
    </application>

</manifest>
